<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.maintmp.MainTmpFragment">

    <Button
        android:id="@+id/go_to_categories_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:text="Категории"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/go_to_favourites"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Избранное"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/go_to_categories_button"
        app:layout_constraintEnd_toEndOf="@id/go_to_categories_button"
        app:layout_constraintTop_toBottomOf="@id/go_to_categories_button"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="test"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/go_to_favourites"
        app:layout_constraintEnd_toEndOf="@id/go_to_favourites"
        app:layout_constraintTop_toBottomOf="@id/go_to_favourites"/>

</androidx.constraintlayout.widget.ConstraintLayout>