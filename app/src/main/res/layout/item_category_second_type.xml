<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="5dp"
    android:paddingBottom="10dp"
    android:background="@android:color/holo_green_light">

    <TextView
        android:id="@+id/item_category_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:text="Category name"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_category_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Questions: 18"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@id/item_category_name"
        app:layout_constraintEnd_toEndOf="@id/item_category_name"
        app:layout_constraintTop_toBottomOf="@id/item_category_name"/>

    <ImageView
        android:id="@+id/item_category_image_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/shape_rectangle_categories_adapter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_category_name"
        app:layout_constraintTop_toTopOf="@id/item_category_name"
        app:layout_constraintBottom_toBottomOf="@id/last_question_date"/>

    <TextView
        android:id="@+id/last_question_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@id/item_category_name"
        app:layout_constraintEnd_toEndOf="@id/item_category_name"
        app:layout_constraintTop_toBottomOf="@id/item_category_size"
        tools:text="Последний вопрос добавлен: 28.02.2020"/>

</androidx.constraintlayout.widget.ConstraintLayout>